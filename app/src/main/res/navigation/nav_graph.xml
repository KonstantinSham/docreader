<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.documentreader.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main" >
        <action
            android:id="@+id/action_mainFragment_to_pdfFragment"
            app:destination="@id/pdfFragment"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out"
            app:popEnterAnim="@android:anim/fade_out"
            app:popExitAnim="@android:anim/fade_in"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_mainFragment_to_docFragment"
            app:destination="@id/docFragment"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out"
            app:popEnterAnim="@android:anim/fade_out"
            app:popExitAnim="@android:anim/fade_in"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_mainFragment_to_xlsFragment"
            app:destination="@id/xlsFragment"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out"
            app:popEnterAnim="@android:animator/fade_in"
            app:popExitAnim="@android:anim/fade_out" />
        <action
            android:id="@+id/action_mainFragment_to_txtFragment"
            app:destination="@id/txtFragment"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out"
            app:popEnterAnim="@android:anim/fade_out"
            app:popExitAnim="@android:anim/fade_in"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/pdfFragment"
        android:name="com.example.documentreader.PdfFragment"
        android:label="PdfFragment" >
        <action
            android:id="@+id/action_pdfFragment_to_mainFragment"
            app:destination="@id/mainFragment"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out"
            app:popEnterAnim="@android:anim/fade_out"
            app:popExitAnim="@android:anim/fade_in"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/docFragment"
        android:name="com.example.documentreader.DocFragment"
        android:label="fragment_doc"
        tools:layout="@layout/fragment_doc" >
        <action
            android:id="@+id/action_docFragment_to_mainFragment"
            app:destination="@id/mainFragment"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out"
            app:popEnterAnim="@android:anim/fade_out"
            app:popExitAnim="@android:anim/fade_in"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/xlsFragment"
        android:name="com.example.documentreader.XlsFragment"
        android:label="XlsFragment" >
        <action
            android:id="@+id/action_xlsFragment_to_mainFragment"
            app:destination="@id/mainFragment"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out"
            app:popEnterAnim="@android:anim/fade_out"
            app:popExitAnim="@android:anim/fade_in"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/txtFragment"
        android:name="com.example.documentreader.TxtFragment"
        android:label="TxtFragment" >
        <action
            android:id="@+id/action_txtFragment_to_mainFragment"
            app:destination="@id/mainFragment"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out"
            app:popEnterAnim="@android:anim/fade_out"
            app:popExitAnim="@android:anim/fade_in"
            app:popUpToInclusive="true" />
    </fragment>
</navigation>